{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "lib": [
            "ESNext",
            "dom"
        ],
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "inlineSourceMap": true,
    },
    "include": [
        "src/**/*",
    ],
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
    }
}