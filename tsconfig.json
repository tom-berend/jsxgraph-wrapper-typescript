{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "es5",
        "lib": [
            "ESNext",
            "dom"
        ],
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "test/test.ts"
, "simple/simple.js"    ],
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "excludeDirectories": [
            "**/node_modules",
            "_build"
        ],
    }
}